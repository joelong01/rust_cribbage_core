    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cribbage-api'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cribbage-api",
                    "--package=cribbage-api"
                ],
                "filter": {
                    "name": "cribbage-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/api"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cribbage-game'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=cribbage-game"
                ],
                "filter": {
                    "name": "cribbage-game",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/game"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug selected unit test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=cribbage-game"
                ],
                "filter": {
                    "name": "cribbage-game",
                    "kind": "lib"
                }
            },
            "args": [
                "${selectedText}"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}